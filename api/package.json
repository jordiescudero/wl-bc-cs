{
  "name": "MSec-developer-portal",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "files": [
    "/dist",
    "/locales",
    "package.json"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=local nest start --watch",
    "start:dev": "cross-env NODE_ENV=dev nest start --watch",
    "start:debug_orig": "cross-env NODE_ENV=dev nest start --debug --watch",
    "start:debug": "cross-env NODE_ENV=local DEBUG=true nodemon --config nodemon-debug.json",
    "start:prod": "cross-env NODE_ENV=prod node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --runInBand ",
    "test:timeout": "jest --runInBand --testTimeout=30000",
    "test:watch": "jest --watch",
    "test:cov": "jest --detectOpenHandles",
    "test:covWatch": "jest --coverage --detectOpenHandles --watchAll",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "start:mongo": "docker start mongo-nest",
    "create:mongo": "docker run -p 27017:27017 --name mongo-nest -d mongo:4"
  },
  "dependencies": {
    "@nestjs/common": "^6.7.2",
    "@nestjs/core": "^6.7.2",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.7.2",
    "@nestjs/serve-static": "^1.0.1",
    "@nestjs/swagger": "^3.1.0",
    "@nestjs/typeorm": "^6.2.0",
    "bip39": "^3.0.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.10.1",
    "cookie-parser": "^1.4.4",
    "cross-env": "^6.0.3",
    "dotenv": "^8.1.0",
    "eth-crypto": "^1.8.0",
    "express-mung": "^0.5.1",
    "hbs": "^4.0.5",
    "hdkey": "^2.0.1",
    "helmet": "^3.21.1",
    "i18n": "^0.8.3",
    "joi": "^14.3.1",
    "module-alias": "^2.2.2",
    "mongodb": "^3.3.2",
    "nodemailer": "^6.3.0",
    "nodemailer-express-handlebars": "^3.1.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "path": "^0.12.7",
    "rxjs": "^6.5.3",
    "swagger-ui-express": "^4.1.1",
    "typeorm": "^0.2.19",
    "typescript": "^4.1.5",
    "truffle-hdwallet-provider": "0.0.6",
    "web3": "^1.2.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.9.0",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.11.4",
    "@shelf/jest-mongodb": "^1.1.3",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.12.30",
    "@types/nodemailer": "^6.2.1",
    "@types/supertest": "^2.0.8",
    "@types/web3": "^1.2.2",
    "core-js": "^3.6.4",
    "jest": "^24.9.0",
    "nodemon": "^1.19.3",
    "mongodb-memory-server": "^6.2.4",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "3.7.4"
  },
  "jest": {
    "verbose": true,
    "preset": "@shelf/jest-mongodb",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@app/(.*)": "<rootDir>/$1",
      "@modules/(.*)": "<rootDir>/modules/$1",
      "@common/(.*)": "<rootDir>/common/$1",
      "@auth/(.*)": "<rootDir>/modules/auth/$1",
      "@contracts/(.*)": "<rootDir>/contracts/$1"
    }
  },
  "_moduleAliases": {
    "@modules": "dist/modules",
    "@common": "dist/common",
    "@auth": "dist/modules/auth",
    "@contracts": "dist/contracts"
  }
}
